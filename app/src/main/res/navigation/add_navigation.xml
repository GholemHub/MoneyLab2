<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_navigation"
    app:startDestination="@id/add_fragment">

    <fragment
        android:id="@+id/add_fragment"
        android:name="com.gholem.moneylab.features.add.AddTransactionFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add">

        <action
            android:id="@+id/actionToCategoryBottomSheetDialog"
            app:destination="@+id/category_bottom_sheet_dialog" />
    </fragment>

    <dialog
        android:id="@+id/category_bottom_sheet_dialog"
        android:name="com.gholem.moneylab.features.add.chooseTransactionCategory.BottomSheetCategoryFragment"
        android:label="CategoryBottomSheet"
        tools:layout="@layout/bottomsheet_category_fragment" >
        <action
            android:id="@+id/action_category_bottom_sheet_dialog_to_add_fragment"
            app:destination="@id/add_fragment" />
        <action
            android:id="@+id/action_category_bottom_sheet_dialog_to_createNewCategoryFragment"
            app:destination="@id/createNewCategoryFragment" />
    </dialog>
    <fragment
        android:id="@+id/createNewTransactionCategoryFragment"
        android:name="com.gholem.moneylab.features.add.chooseTransactionCategory.createNewCategoryImage.CreateNewCategoryImageFragment"
        android:label="CreateNewTransactionCategoryFragment" >
        <action
            android:id="@+id/action_createNewTransactionCategoryFragment_to_createNewCategoryFragment"
            app:destination="@id/createNewCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/createNewCategoryFragment"
        android:name="com.gholem.moneylab.features.add.chooseTransactionCategory.createNewCategory.CreateNewCategoryFragment"
        android:label="CreateNewCategoryFragment" >
        <action
            android:id="@+id/action_createNewCategoryFragment_to_createNewTransactionCategoryFragment"
            app:destination="@id/createNewTransactionCategoryFragment" />
    </fragment>
</navigation>
