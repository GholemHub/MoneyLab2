    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chart_navigation"
    app:startDestination="@id/chart_fragment">

    <fragment
        android:id="@+id/chart_fragment"
        android:name="com.gholem.moneylab.features.chart.ChartFragment"
        android:label="Chart"
        tools:layout="@layout/fragment_chart" >
        <action
            android:id="@+id/actionChartFragmentToEditTransactionFragment"
            app:destination="@id/editTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/editTransactionFragment"
        android:name="com.gholem.moneylab.features.editTransaction.EditTransactionFragment"
        android:label="fragment_edit_transaction"
        tools:layout="@layout/fragment_edit_transaction" />
